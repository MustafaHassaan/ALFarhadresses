@model ALFarhadresses.Models.Orders

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}





<partial name="_Logo" />
<center>
    <h3>Are you sure you want to delete this Order?</h3>
    <br />
    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-danger" role="alert" style="width:700px;">
            @ViewBag.Msg
        </div>
    }
</center>
<table class="table table-dark" style="width: 97%; margin-right: 20px; margin-left: 23px; margin-bottom: 157px;">
    <thead>
        <tr>
            <th>
                Payment
            </th>
            <th>
                Date
            </th>
            <th>
                Fees
            </th>
            <th>
                ShipAddress
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>
                    @Model.Payment
                </td>
                <td>
                    @Model.Date
                </td>
                <td>
                    @Model.Fees
                </td>
                <td>
                    @Model.ShipAddress
                </td>
                <td>
                    @Model.Status
                </td>
            </tr>
        <tr>
            <td>
                <center>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Yes" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-primary">No</a>
                    </form>
                </center>
            </td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
