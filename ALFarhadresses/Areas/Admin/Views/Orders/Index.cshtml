@model IEnumerable<ALFarhadresses.Models.Orders>
@{
ViewData["Title"] = "Index";
Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

    <partial name="_Logo" />
        <table class="table table-dark" style="width: 97%; margin-right: 20px; margin-left: 23px; margin-bottom: 157px;">
            <thead>
                <tr>
                    <th>
                        Payment
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Fees
                    </th>
                    <th>
                        ShipAddress
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Customers
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fees)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ShipAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustNavigation.Email)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" style="color:white;text-decoration:none;">
                                <i class="fas fa-edit" style="color:white;text-decoration:none;"></i>
                            </a> |
                            <a asp-action="Details" asp-route-id="@item.Id" style="color:white;text-decoration:none;">
                                <i class="fas fa-calendar-week" style="color:white;text-decoration:none;"></i>
                            </a>|
                            <a asp-action="Delete" asp-route-id="@item.Id" style="color:white;text-decoration:none;">
                                <i class="fa fa-trash" style="color:white"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>