@model ALFarhadresses.Models.Categories

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout - Admin.cshtml";
}

<partial name="_Logo" />
<div class="card" style="margin-bottom: 20px; margin-left: 20px; margin-right: 20px;">
    <h5 style="color:white;" class="card-header bg-dark">
        <div style="text-align-last: center;">
            <h3>Are you sure you want to delete this Category ?</h3>
        </div>
    </h5>
    <div class="card-body">
        <form asp-action="Delete">
            <center>
                @if (ViewBag.Msg != null)
                {
                    <div class="alert alert-dark" role="alert" style="width:700px; color:white;">
                        @ViewBag.Msg
                    </div>
                }
                <div>
                    <dl class="dl-horizontal" style="font-size:25px;">
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
            </center>
            <input type="submit" value="yes" class="btn btn-primary" />
            <a asp-action="MgCategory" class="btn btn-primary">No</a>
        </form>
    </div>
</div>